   2343                  zclGenSceneTable = pLoop->next;
   2344                else
   2345                  pPrev->next = pLoop->next;
   2346                pNext = pLoop->next;
   2347          
   2348                // Free the memory
   2349                zcl_mem_free( pLoop );
   2350                pLoop = pNext;
   2351              }
   2352              else
   2353              {
   2354                pPrev = pLoop;
   2355                pLoop = pLoop->next;
   2356              }
   2357            }
   2358          
   2359            // Update NV
   2360            zclGeneral_ScenesWriteNV();
   2361          }
